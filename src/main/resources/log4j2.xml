<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} %p %t %c{1.} %m%n</Property>
	</Properties>
	<Appenders>
		<Console name="ConsoleAppender">
			<PatternLayout pattern="${LOG_PATTERN}" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="csw.assignment" level="ALL" additivity="false">
			<AppenderRef ref="ConsoleAppender" />
		</Logger>
		<Root level="INFO">
			<AppenderRef ref="ConsoleAppender" />
		</Root>
	</Loggers>
</Configuration>